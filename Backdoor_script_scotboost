local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- GUI
local mainGui = Instance.new("ScreenGui")
mainGui.Name = "ScotboostGUI"
mainGui.ResetOnSpawn = false
mainGui.Parent = playerGui

-- Main Frame
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 600, 0, 300)
mainFrame.Position = UDim2.new(0.5, -300, 0.5, -150)
mainFrame.BackgroundColor3 = Color3.fromRGB(255, 220, 0)
mainFrame.BackgroundTransparency = 0.2
mainFrame.BorderSizePixel = 2
mainFrame.BorderColor3 = Color3.fromRGB(0, 0, 0)
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = mainGui

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundTransparency = 1
title.Text = "Scotboost"
title.TextColor3 = Color3.fromRGB(0, 0, 0)
title.Font = Enum.Font.GothamBold
title.TextSize = 20
title.Parent = mainFrame

-- Script Box
local scriptBox = Instance.new("TextBox")
scriptBox.Size = UDim2.new(1, -20, 0, 180)
scriptBox.Position = UDim2.new(0, 10, 0, 35)
scriptBox.MultiLine = true
scriptBox.ClearTextOnFocus = false
scriptBox.BackgroundColor3 = Color3.fromRGB(255, 240, 150)
scriptBox.TextColor3 = Color3.fromRGB(0, 0, 0)
scriptBox.Text = ""
scriptBox.Font = Enum.Font.Code
scriptBox.TextSize = 14
scriptBox.TextXAlignment = Enum.TextXAlignment.Left
scriptBox.TextYAlignment = Enum.TextYAlignment.Top
scriptBox.Parent = mainFrame

-- Syntax Highlight Overlay
local highlight = Instance.new("TextLabel")
highlight.Size = scriptBox.Size
highlight.Position = scriptBox.Position
highlight.BackgroundTransparency = 1
highlight.TextXAlignment = Enum.TextXAlignment.Left
highlight.TextYAlignment = Enum.TextYAlignment.Top
highlight.Font = Enum.Font.Code
highlight.TextSize = scriptBox.TextSize
highlight.Text = ""
highlight.RichText = true
highlight.ZIndex = scriptBox.ZIndex - 1
highlight.Parent = mainFrame

scriptBox:GetPropertyChangedSignal("AbsoluteSize"):Connect(function()
local newSize = math.clamp(math.floor(scriptBox.AbsoluteSize.Y / 12), 10, 20)
scriptBox.TextSize = newSize
highlight.TextSize = newSize
end)

local function updateHighlight()
local text = scriptBox.Text
local words = text:split(" ")
local colored = ""
for _, w in ipairs(words) do
if string.find(w, "http") then
colored ..= "<font color='rgb(0,100,200)'>"..w.."</font> "
elseif string.find(w, "local") or string.find(w, "function") or string.find(w, "end") then
colored ..= "<font color='rgb(200,50,50)'>"..w.."</font> "
else
colored ..= "<font color='rgb(0,130,0)'>"..w.."</font> "
end
end
highlight.Text = colored
end
scriptBox:GetPropertyChangedSignal("Text"):Connect(updateHighlight)

-- Button Styling
local function styleButton(button, text, posX, posY)
button.Size = UDim2.new(0, 100, 0, 30)
button.Position = UDim2.new(0, posX, 0, posY)
button.Text = text
button.BackgroundColor3 = Color3.fromRGB(255, 210, 0)
button.BorderColor3 = Color3.fromRGB(0, 0, 0)
button.BorderSizePixel = 2
button.TextColor3 = Color3.fromRGB(0, 0, 0)
button.Font = Enum.Font.GothamBold
button.TextSize = 14
button.Parent = mainFrame
end

-- Execute
local execButton = Instance.new("TextButton")
styleButton(execButton, "Execute", 10, 230)
execButton.MouseButton1Click:Connect(function()
local code = scriptBox.Text
if code and code ~= "" then
local func, err = loadstring(code)
if func then
func()
else
warn("Error:", err)
end
end
end)

-- Clear
local clearButton = Instance.new("TextButton")
styleButton(clearButton, "Clear", 120, 230)
clearButton.MouseButton1Click:Connect(function()
scriptBox.Text = ""
updateHighlight()
end)

-- Reset (forzado sin bugs)
local resetButton = Instance.new("TextButton")
styleButton(resetButton, "Reset", 230, 230)
resetButton.MouseButton1Click:Connect(function()
local char = player.Character
local hum = char and char:FindFirstChildOfClass("Humanoid")
if hum then
hum:ChangeState(Enum.HumanoidStateType.Dead)
end
end)

-- ESP
local injectESPButton = Instance.new("TextButton")
styleButton(injectESPButton, "ESP", 340, 230)

local ESP_Active = false
local ESP_Connections = {}

local function CreateESP(plr)
local highlightESP = Instance.new("Highlight")
highlightESP.Parent = plr.Character
highlightESP.FillColor = Color3.fromRGB(255, 0, 0)
highlightESP.OutlineColor = Color3.fromRGB(255, 255, 255)
highlightESP.FillTransparency = 0.5
highlightESP.Adornee = plr.Character
highlightESP.Name = "PlayerESP"
end

local function EnableESP()
for _, plr in pairs(game.Players:GetPlayers()) do
if plr ~= player and plr.Character then
CreateESP(plr)
end
end
table.insert(ESP_Connections, game.Players.PlayerAdded:Connect(function(plr)
plr.CharacterAdded:Connect(function()
CreateESP(plr)
end)
end))
end

local function DisableESP()
for _, plr in pairs(game.Players:GetPlayers()) do
if plr.Character and plr.Character:FindFirstChild("PlayerESP") then
plr.Character.PlayerESP:Destroy()
end
end
for _, conn in ipairs(ESP_Connections) do conn:Disconnect() end
ESP_Connections = {}
end

injectESPButton.MouseButton1Click:Connect(function()
ESP_Active = not ESP_Active
if ESP_Active then
EnableESP()
injectESPButton.Text = "Stop ESP"
else
DisableESP()
injectESPButton.Text = "ESP"
end
end)

